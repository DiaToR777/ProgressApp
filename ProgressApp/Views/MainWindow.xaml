<Window x:Class="ProgressApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProgressApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="160"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Левая панель -->
            <StackPanel Grid.Column="0" Background="#1e1e1e">
                <Button Content="Сегодня" Click="Today_Click"/>
                <Button Content="Таблица" Click="Table_Click"/>
                <Button Content="Настройки" Click="Settings_Click"/>
            </StackPanel>

            <!-- Контент -->
            <ContentControl x:Name="MainContent" Grid.Column="1"/>
        </Grid>

    </Grid>
</Window>
