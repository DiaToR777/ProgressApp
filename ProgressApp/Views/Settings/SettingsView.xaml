<UserControl x:Class="ProgressApp.Views.Settings.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             mc:Ignorable="d"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:ProgressApp.ViewModels.Settings"
             d:DataContext="{d:DesignInstance Type=vm:SettingsViewModel}">

	<Grid Margin="30">
		<StackPanel MaxWidth="400" HorizontalAlignment="Left">
			<TextBlock Text="Настройки профиля" FontSize="22" FontWeight="Bold" Margin="0,0,0,20"/>

			<Label Content="Имя пользователя:"/>
			<TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,15"/>

			<Label Content="Ваша цель:"/>
			<TextBox Text="{Binding Goal, UpdateSourceTrigger=PropertyChanged}"
                     Height="60"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     Margin="0,5,0,15"/>

			<Label Content="Тема оформления:"/>
			<ComboBox SelectedItem="{Binding CurrentTheme}"
                      ItemsSource="{Binding AvailableThemes}"
                      Margin="0,5,0,20"/>

			<Separator Margin="0,10"/>

			<TextBlock Text="Управление данными" FontSize="16" FontWeight="SemiBold" Margin="0,10,0,10"/>

			<Button Content="Сохранить изменения"
                    Command="{Binding SaveSettingsCommand}"
                    Padding="10,5"/>

			<Button Content="Сбросить все данные (Опасно!)"
                    Command="{Binding ResetAppCommand}"
                    Margin="0,10,0,0"
                    Foreground="Red"
                    Background="Transparent"
                    BorderBrush="Red"/>

			<TextBlock Text="Версия приложения: 1.0.0"
                       Margin="0,30,0,0"
                       FontSize="10"
                       HorizontalAlignment="Center"/>
		</StackPanel>
	</Grid>
</UserControl>