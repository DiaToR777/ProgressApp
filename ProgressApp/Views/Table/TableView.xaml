<UserControl x:Class="ProgressApp.Views.Table.TableView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Grid Margin="10">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="300"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>

		<!-- Таблица -->
		<DataGrid x:Name="dgJournal"
				  AutoGenerateColumns="False"
				  IsReadOnly="True"
				  SelectionMode="Single"
				  SelectionChanged="Journal_SelectionChanged">
			<DataGrid.Columns>
				<DataGridTextColumn Header="Дата"
									Binding="{Binding Date, StringFormat=dd.MM.yyyy}"
									Width="120"/>
				<DataGridTextColumn Header="Результат"
									Binding="{Binding Result}"
									Width="*"/>
			</DataGrid.Columns>
		</DataGrid>

		<!-- Детали -->
		<StackPanel Grid.Column="1" Margin="20,0">
			<TextBlock Text="Детали дня"
					   FontSize="18"
					   Margin="0,0,0,10"/>

			<TextBlock Text="{Binding SelectedEntry.Date,
                          StringFormat=Дата: dd MMMM yyyy}"/>

			<TextBlock Text="{Binding SelectedEntry.Result,
                          StringFormat=Результат: {0}}"
					   Margin="0,5"/>

			<TextBlock Text="Описание:" Margin="0,10,0,0"/>
			<TextBox Text="{Binding SelectedEntry.Description}"
					 IsReadOnly="True"
					 TextWrapping="Wrap"
					 AcceptsReturn="True"
					 Height="120"/>
		</StackPanel>
	</Grid>
</UserControl>
