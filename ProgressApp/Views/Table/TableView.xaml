<UserControl x:Class="ProgressApp.Views.Table.TableView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Grid Margin="10">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="300"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>

		<!-- Таблица -->
        <DataGrid ItemsSource="{Binding Entries}"
          SelectedItem="{Binding SelectedEntry}"
          AutoGenerateColumns="False"
          IsReadOnly="True"
          SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="{Binding Source={StaticResource Langs}, Path=[DataGrid_Date]}"
                                    Binding="{Binding Date, StringFormat=dd.MM.yyyy}"
                                    Width="120"/>

                <DataGridTextColumn Header="{Binding Source={StaticResource Langs}, Path=[DataGrid_Result]}"
                                    Binding="{Binding Result}"
                                    Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        
        <!-- Детали -->
		<StackPanel Grid.Column="1" Margin="20,0">
            <TextBlock Text="{Binding Source={StaticResource Langs}, Path=[Title_DayDatails]}"
					   FontSize="18"
					   Margin="0,0,0,10"/>

            <TextBlock Margin="0,5">
                <TextBlock.Text>
                    <MultiBinding StringFormat="{}{0}: {1:dd MMMM yyyy}">
                        <Binding Source="{StaticResource Langs}" Path="[DataGrid_Date]" />
                        <Binding Path="SelectedEntry.Date" />
                    </MultiBinding>
                </TextBlock.Text>
            </TextBlock>
            
            <TextBlock Margin="0,5">
                <TextBlock.Text>
                    <MultiBinding StringFormat="{}{0} {1}">
                        <Binding Source="{StaticResource Langs}" Path="[DataGrid_Result]" />
                        <Binding Path="SelectedEntry.Result" />
                    </MultiBinding>
                </TextBlock.Text>
            </TextBlock>
            <TextBlock Text="{Binding Source={StaticResource Langs}, Path=[Title_Description]}"
                       Margin="0,10,0,0"/>
			<TextBox Text="{Binding SelectedEntry.Description}"
					 IsReadOnly="True"
					 TextWrapping="Wrap"
					 AcceptsReturn="True"
					 Height="120"/>
		</StackPanel>
	</Grid>
</UserControl>
