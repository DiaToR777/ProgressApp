<UserControl x:Class="ProgressApp.Views.Table.TableView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:helpers="clr-namespace:ProgressApp.Localization.Helpers"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Margin="10"
          helpers:LanguageHelper.UpdateLanguage="{Binding Source={StaticResource Langs}, Path=CurrentCulture}">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <DataGrid ItemsSource="{Binding Entries}"
                  SelectedItem="{Binding SelectedEntry}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="{Binding Source={StaticResource Langs}, Path=[DataGrid_Date]}"
                                    Binding="{Binding Date, StringFormat=dd.MM.yyyy}"
                                    Width="120"/>

                <DataGridTextColumn Header="{Binding Source={StaticResource Langs}, Path=[DataGrid_Result]}"
                                    Binding="{Binding Result, Converter={StaticResource EnumConverter}}"
                                    Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Column="1" Margin="20,0">
            <TextBlock Text="{Binding Source={StaticResource Langs}, Path=[Title_DayDatails]}"
                       FontSize="18"
                       Margin="0,0,0,10"/>

            <TextBlock Margin="0,5">
                <TextBlock.Text>
                    <MultiBinding StringFormat="{}{0}: {1:dd MMMM yyyy}">
                        <Binding Source="{StaticResource Langs}" Path="[DataGrid_Date]" />
                        <Binding Path="SelectedEntry.Date" />
                    </MultiBinding>
                </TextBlock.Text>
            </TextBlock>

            <TextBlock Margin="0,5">
                <TextBlock.Text>
                    <MultiBinding StringFormat="{}{0}: {1}">
                        <Binding Source="{StaticResource Langs}" Path="[DataGrid_Result]" />
                        <Binding Path="SelectedEntry.Result" Converter="{StaticResource EnumConverter}" />
                    </MultiBinding>
                </TextBlock.Text>
            </TextBlock>

            <TextBlock Text="{Binding Source={StaticResource Langs}, Path=[Title_Description]}"
                       Margin="0,10,0,0"/>
            <TextBox Text="{Binding SelectedEntry.Description}"
                     IsReadOnly="True"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     Height="120"
                     Margin="0,5,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>