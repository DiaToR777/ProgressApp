<UserControl x:Class="ProgressApp.Views.InitialSetup.InitialSetupView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <StackPanel Margin="40" Width="300">
        <TextBlock Text="{Binding Source={StaticResource Langs}, Path=[Title_Welcome]}" 
                   FontSize="22"
                   Margin="0,0,0,20"
                   HorizontalAlignment="Center"/>


        <Label Content="{Binding Source={StaticResource Langs}, Path=[Title_username]}" 
       ContentStringFormat="{}{0}:" />

        <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"/>


        <Label Content="{Binding Source={StaticResource Langs}, Path=[Title_YourGoal]}" 
       ContentStringFormat="{}{0}:" />
        
        <TextBox  Text="{Binding Goal, UpdateSourceTrigger=PropertyChanged}"/>


        <Button Content="{Binding Source={StaticResource Langs}, Path=[Title_Start]}" 
                Margin="0,30,0,0"
                Command="{Binding FinishCommand}"/>
    </StackPanel>
</UserControl>
