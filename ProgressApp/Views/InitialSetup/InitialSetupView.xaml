<UserControl x:Class="ProgressApp.Views.InitialSetup.InitialSetupView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <StackPanel Margin="40" Width="300">
        <TextBlock Text="Добро пожаловать"
                   FontSize="22"
                   Margin="0,0,0,20"
                   HorizontalAlignment="Center"/>

        <Label Content="Ваше имя:"/>
        <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"/>
                 

        <Label Content="Ваша цель:"/>
        <TextBox  Margin="0,10,0,0"
                  Text="{Binding Goal, UpdateSourceTrigger=PropertyChanged}"/>


        <Button Content="Начать"
                Margin="0,20,0,0"
                Command="{Binding FinishCommand}"/>
    </StackPanel>
</UserControl>
