<UserControl x:Class="ProgressApp.WpfUI.Views.Settings.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             mc:Ignorable="d"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:ProgressApp.WpfUI.ViewModels.Settings"
             d:DataContext="{d:DesignInstance Type=vm:SettingsViewModel}">

	<Grid Margin="30">
		<StackPanel MaxWidth="400" HorizontalAlignment="Left">
            <TextBlock Text="{Binding Source={StaticResource Langs}, Path=[Title_ProfileSettings]}"
                       FontSize="22" FontWeight="Bold" Margin="0,0,0,20"/>

            <Label Content="{Binding Source={StaticResource Langs}, Path=[Title_username]}" 
       ContentStringFormat="{}{0}:" />
            <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,15"/>

            <Label Content="{Binding Source={StaticResource Langs}, Path=[Title_YourGoal]}" 
       ContentStringFormat="{}{0}:" />
            <TextBox Text="{Binding Goal, UpdateSourceTrigger=PropertyChanged}"
                     Height="60"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     Margin="0,5,0,15"/>

            <Label Content="{Binding Source={StaticResource Langs}, Path=[Title_Theme]}" 
       ContentStringFormat="{}{0}:" />

            <ComboBox SelectedItem="{Binding SelectedTheme}"
                      ItemsSource="{Binding AllThemes}"
                      Margin="0,5,0,20"/>

            <Label Content="{Binding Source={StaticResource Langs}, Path=[Title_SelectLanguage]}" 
       ContentStringFormat="{}{0}:" />

            <ComboBox ItemsSource="{Binding AvailableLanguages}" Margin="0,5,0,20" SelectedItem="{Binding SelectedLanguage}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <Separator Margin="0,10"/>
            <TextBlock Text="{Binding Source={StaticResource Langs}, Path=[Title_DataManagement]}" FontSize="16" FontWeight="SemiBold" Margin="0,10,0,10"/>

            <Button Content="{Binding Source={StaticResource Langs}, Path=[Title_SaveChanges]}"
                    Command="{Binding SaveSettingsCommand}"
                    Padding="10,5"/>

			<TextBlock Text="App v1.0.0"
                       Margin="0,30,0,0"
                       FontSize="10"
                       HorizontalAlignment="Center"/>
		</StackPanel>
	</Grid>
</UserControl>
